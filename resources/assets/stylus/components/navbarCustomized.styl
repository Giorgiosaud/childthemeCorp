nav.navbar-customized.navbar.navbar-default.navbar-fixed-top
	min-height 100px
	border-radius: 0
	border: transparent
	.navbar-brand.custom-logo-link
		height 100px
	li
		display: flex
		height: 100px
		align-items: center
		justify-content: flex-start
		&.separator
			height: 1em
			width: 2em
		&>a
			line-height: 70px;
			padding 10px
			text-transform uppercase
		&.active,&.active>a
			background $mainColor !important
			color #FFF !important
		&:hover,&>a:hover
			background $colorFocusActive !important
			color #FFF !important
		&:focus,&>a:focus
			background $colorFocusActive
			color #FFF
			
@media (min-width: 768px)
	.navbar-customized
		li
			align-items center
			justify-content center
